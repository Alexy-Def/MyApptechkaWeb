@model DrugViewModel
@*@model DrugViewModel*@

@using MyApptechkaWeb.Service.Interface
@using AutoMapper

<div class="drug-container">
    <div class="left-block-drug">

    </div>
    <div class="right-block-drug">
        <div class="title-about-drug"></div>
        <div class="info-about-drug">
            <div class="name-property-info-drug">Название:</div>
            <div class="text-property-info-drug">@Model.Name</div>
            <div class="name-property-info-drug">Форма выпуска:</div>
            <div class="text-property-info-drug">@Model.Form</div>
            <div class="name-property-info-drug">Назначение:</div>
            <div class="text-property-info-drug">@Model.Purpose</div>
            <div class="name-property-info-drug">Срок истечения годности:</div>
            <div class="text-property-info-drug">@Model.ExpiryDate</div>
            <div class="name-property-info-drug">Остаток:</div>
            <div class="text-property-info-drug">@Model.Residue</div>
            <div class="name-property-info-drug">Дополнительное описание:</div>
            <div class="text-property-info-drug">@Model.AdditionalDescription</div>
        </div>
    </div>
</div>